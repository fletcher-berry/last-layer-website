@model AlgPage
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Algorithms</title>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/algPage.js"></script>
        <link rel="stylesheet" type="text/css" href="~/css/site.css" />
        <link rel="stylesheet" type="text/css" href="~/css/index.css" />
        <link rel="stylesheet" type="text/css" href="~/css/algPage.css" />
    </head>
    <body>
        <partial name="header" />
        <div class="Content">
            <div class="Algs">
                <h2>@(Model.CaseTypeMap[Model.CaseType]) algs</h2>
                @if (Model.NextCaseType != null)
                {
                    <p>Click a picture to see @(Model.CaseTypeMap[(CaseType)Model.NextCaseType]) algs for the selected case.</p>
                }
                <table>
                    <thead>
                        <tr>
                            <td>Image</td>
                            <td>Algs</td>
                        </tr>
                    </thead>
                    @foreach (var algCase in Model.Cases)
                    {
                        <partial name="CaseView" model="algCase" />
                    }
                </table>
            </div>
            <div class="Source_area">
                <button id="show_sources_button">Show sources</button>
                <div class="Sources">
                    <ul>
                        @for (var k = 0; k < Model.Sources.Count; k++)
                        {
                            <li>
                                @(k + 1): @(Model.Sources[k].SourceText)
                                <br />
                                @(Model.Sources[k].Url)
                            </li>
                        }
                    </ul>
                    <p>If there is a * next to the source number for an algorithm, this means the algorithm was modified in some way from the algorithm in the source website. 
                    The modification could be that the algorithm was performed from a different angle, or the mirror or inverse of the algorithm was used. 
                    Other modifications are possible. If the modification affects a vary small number of moves (like replacing D' with U' y), the algorithm will not be marked as modified.</p>
                </div>
            </div>
        </div>
        <partial name="footer" />
    </body>
</html>
