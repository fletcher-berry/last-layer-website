@model AlgCase

<tr>
    @* include image *@
    <td>
        @if (Model.NextCaseType == null)
        {
            <img src="/img/@(Model.CaseType.ToString())/@(Model.CaseNumber.ToString())" alt="Image not displaying" width="100" height="100" />
        }
        else
        {
            <a href="/algs/@(Model.NextCaseType.ToString())/@(Model.CaseNumber)">
                <img src="/img/@(Model.CaseType.ToString())/@(Model.CaseNumber.ToString())" alt="Image not displaying" width="100" height="100" />
            </a>
        }
    </td>
    <td>
        <ul>
            @if (Model.Algorithms.Count == 0)
            {
                <li class="alg">No algs available</li>
            }
            else
            {
                foreach(var alg in Model.Algorithms)
                {
                    <li class="alg">@alg.Alg <span class="source" style="display:none"> (@(alg.SourceNumber + (alg.Modified? "*" : "")) </span></li>
                }
            }
        </ul>
    </td>
</tr>